<main>

 <div class="container">
  <div class="row">
  <div class="col-md-3 offset-md-1">
   <h2>User info</h2>
   <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
   <label for="inputName">Name</label>
   <label for="inputName">introduction</label>

       <%= link_to edit_user_path(@user.id) do %>
      <i class="fas fa-user-cog" ></i>
     <% end %>

    <a class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user_path"></a>

   <h2>New book</h2>
   <%= form_with model: @booknew, local:true do |f| %>
   <p>Title</p>
    <%= f.text_field :title %>
   <p>Opinion</p>
    <%= f.text_area :body %>
   <div class="form-group">
    <%= f.submit "Create Book", class: "btn btn-success" %>
    <% end %>
   </div>

     <div class="col-md-8">
       <h2>Books detail</h2>
       <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
         <tbody>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          </tbody>
         </tr>
       </table>
      </div>
  </div>
</main>


